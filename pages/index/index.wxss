.wrapper {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: absolute; /*绝对定位*/
  top: 0;
  left: 0;
  padding: 50rpx; /*内边距,内填充*/
  font-family: 'Times New Roman', Times, serif; /*字体家族*/
}

.now {
  height: 600rpx;
  color: #fff;
  font-size: 0.85em;
  display: flex;
  flex-direction: column; /*纵向*/
}

.tmp {
  font-size: 5em; /*字体大小*/
}

.bg {
  height: 680rpx;
  width: 750rpx;
}

.now-exp {
  display: flex; /*flex布局*/
  flex-direction: row;
  justify-content: space-around;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  line-height: 150%;
  font-size: 1.4em;
}

.now-tmp {
  flex-grow: 1; /*剩余空间全部分配给该元素*/
}

.item-val{
  font-size: 1.2em;
  text-align: center;
}

.item-sp{
  border: 1rpx solid #fff;
}

.type-img{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.forecast{
  margin-top: 50rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.cast-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #ccc;
  padding: 40rpx 0;
}